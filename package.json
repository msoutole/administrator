{
  "name": "administrator",
  "version": "1.0.0",
  "description": "AI-powered CLI tool to analyze & classify GitHub repositories automatically",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "administrator": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' '*.md'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' '*.md'",
    "prepublishOnly": "npm run build",
    "validate": "npm run lint && npm run format:check && npm run test:coverage && npm run build"
  },
  "keywords": [
    "github",
    "repository",
    "analysis",
    "ai",
    "quality",
    "scoring",
    "automation",
    "cli"
  ],
  "author": "Matheus Souto Leal",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msoutole/administrator.git"
  },
  "bugs": {
    "url": "https://github.com/msoutole/administrator/issues"
  },
  "homepage": "https://github.com/msoutole/administrator#readme"
}
